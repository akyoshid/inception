[mysqld]

# ============================================================================
# NETWORKING CONFIGURATION
# ============================================================================

# Listen on all network interfaces (required for Docker networking)
# By default, MariaDB only listens on localhost (127.0.0.1)
# We need to listen on 0.0.0.0 so the WordPress container can connect
bind-address = 0.0.0.0

# Default port for MariaDB
port = 3306

# ============================================================================
# DATA DIRECTORY
# ============================================================================

# Location where database files are stored
# This directory will be mounted as a volume for data persistence
datadir = /var/lib/mysql

# ============================================================================
# GENERAL SETTINGS
# ============================================================================

# Set the default character set to UTF-8
# This ensures proper support for international characters
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Skip DNS hostname lookups for better performance and security
# This prevents potential DNS-based attacks
skip-name-resolve

# Disable symbolic links for security
# Prevents potential privilege escalation attacks
symbolic-links = 0
